#include <stdio.h>
#include <string.h>
int main(){
    char word[100];
    
    scanf("%s", &word);
    int j=strlen(word);
    for(int i=0;i<=strlen(word);i++){
        if (word[i]!=word[j-1]){
            printf("0");
            return 0;
            break;
            
        }    
        j=j-1;
    }
    printf("1");
    return 0;
}
